<Window x:Class="DrugstoreManagementSystem.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrugstoreManagementSystem.UI"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Margin="5" Width="150px">Login:</TextBlock>
            <TextBox Name="LoginTextBox" Margin="5" Width="150px"></TextBox>
            <TextBlock Margin="5" Width="150px">Password:</TextBlock>
            <PasswordBox Name="PasswordBox" Margin="5" Width="150px"></PasswordBox>
            <Button Name="LogInButton" Margin="5,10" Width="150" Height="30" Click="LogInButton_Click">Log in</Button>
        </StackPanel>
    </Grid>
</Window>
